{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", // This enables ES Modules
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"]
}